  "types": "./dist/src/index.d.ts",
  "files": [
    "src",
    "dist",
    "!dist/test",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gotchoices/optimystic.git",
    "directory": "packages/db-core"
  },
  "author": "Got Choices Foundation",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "optimystic",
    "database",
    "core",
    "distributed",
    "transactional",
    "acid"
