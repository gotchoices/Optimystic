{
  "$schema": "https://quereus.dev/schemas/quoomb-config.json",
  "description": "Second node using environment variables for bootstrap address",
  "plugins": [
    {
      "source": "npm:@optimystic/quereus-plugin-optimystic",
      "config": {
        "default_transactor": "network",
        "default_key_network": "libp2p",
        "enable_cache": true,
        "port": "${OPTIMYSTIC_PORT:-8012}",
        "networkName": "${NETWORK_NAME:-optimystic-dev}",
        "bootstrap": "${BOOTSTRAP_ADDR}"
      }
    }
  ],
  "autoload": true,
  "notes": [
    "Usage:",
    "  BOOTSTRAP_ADDR=/ip4/127.0.0.1/tcp/8011/p2p/12D3KooW... quoomb --config quoomb.config.node2.env.json",
    "",
    "Optional environment variables:",
    "  OPTIMYSTIC_PORT - Port to listen on (default: 8012)",
    "  NETWORK_NAME - Network name for isolation (default: optimystic-dev)",
    "  BOOTSTRAP_ADDR - Bootstrap multiaddr (required)"
  ]
}

