{
  "name": "@optimystic/reference-peer",
  "version": "0.0.1",
  "type": "module",
  "description": "Reference peer implementation for Optimystic",
  "main": "dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "src",
    "dist",
    "!dist/test",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "scripts": {
    "clean": "aegir clean",
    "build": "aegir build --env node",
    "mesh": "node dist/src/mesh.js",
    "start": "node dist/src/cli.js",
    "lint": "aegir lint",
    "test": "aegir test",
    "test:node": "aegir test -t node",
    "test:quick": "node dist/test/quick-test.js",
    "test:quick:debug": "node --inspect-brk dist/test/quick-test.js",
    "dep-check": "aegir dep-check"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "aegir": "^45.1.4"
  },
  "dependencies": {
    "@libp2p/interface": "^2.10.5",
    "@libp2p/peer-id": "^5.1.8",
    "@optimystic/db-core": "workspace:^",
    "@optimystic/db-p2p": "workspace:^",
    "commander": "^14.0.0",
    "debug": "^4.4.1",
    "uint8arrays": "^5.1.0"
  },
  "aegir": {
    "build": {
      "bundle": false
    }
  }
}
