{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Optimystic: Start Mesh (N=3) then Debug Peer",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "packages/test-peer/dist/mesh.js"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "MESH_NODES": "3",
        "MESH_BASE_PORT": "8011",
        "DEBUG": "libp2p:*,db-p2p:*"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Optimystic: Debug Interactive Peer (bootstraps to mesh)",
      "program": "${workspaceFolder}/packages/test-peer/dist/cli.js",
      "args": [
        "interactive",
        "--network", "optimystic-test",
        "--bootstrap-file", "${workspaceFolder}/.mesh/node-1.json"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "DEBUG": "libp2p:*,db-p2p:*"
      },
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true
    },
		{
      "type": "node",
      "request": "launch",
      "name": "Debug Core Tests",
      "cwd": "${workspaceFolder}/packages/db-core",
      "program": "${workspaceFolder}/node_modules/aegir/src/index.js",
      "args": [
        "test",
        "--debug",
        "-g",
        "Collection"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Optimystic: Mesh + Debug Peer",
      "configurations": [
        "Optimystic: Start Mesh (N=3) then Debug Peer",
        "Optimystic: Debug Interactive Peer (bootstraps to mesh)"
      ]
    }
  ]
}
