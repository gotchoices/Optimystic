{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Core Tests",
      "cwd": "${workspaceFolder}/packages/db-core",
      "program": "${workspaceFolder}/node_modules/aegir/src/index.js",
      "args": [
        "test",
        "--debug",
        "-g",
        "Collection"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
