{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Optimystic: Start Mesh (N=3) then Debug Peer",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "packages/reference-peer/dist/src/mesh.js"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "MESH_NODES": "3",
        "MESH_BASE_PORT": "8011",
        "DEBUG": "optimystic:*,db-p2p:*,libp2p:connection-manager,-libp2p:connection-manager:dial-queue,-libp2p:*:error"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Optimystic: Debug Interactive Peer (bootstraps to mesh)",
      "program": "${workspaceFolder}/packages/reference-peer/dist/src/cli.js",
      "args": [
        "interactive",
        "--network", "optimystic",
        "--bootstrap-file", "${workspaceFolder}/.mesh"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "DEBUG": "db-core:network-transactor,db-p2p:cluster,db-p2p:cluster:error,-db-p2p:*,-optimystic:*,-libp2p:*"
      },
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true
    },
		{
      "type": "node",
      "request": "launch",
      "name": "Debug Core Tests",
      "cwd": "${workspaceFolder}/packages/db-core",
      "program": "${workspaceFolder}/node_modules/aegir/src/index.js",
      "args": [
        "test",
        "--debug",
        "-g",
        "Collection"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Quick Test (3-node mesh)",
      "program": "${workspaceFolder}/packages/reference-peer/dist/test/quick-test.js",
      "cwd": "${workspaceFolder}",
      "env": {
        "DEBUG": "optimystic:*,db-p2p:*"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Test Peer Tests",
      "cwd": "${workspaceFolder}/packages/reference-peer",
      "program": "${workspaceFolder}/node_modules/aegir/src/index.js",
      "args": [
        "test",
        "-t",
        "node",
        "--",
        "--test-name-pattern",
        "Distributed Diary"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Optimystic: Mesh + Debug Peer",
      "configurations": [
        "Optimystic: Start Mesh (N=3) then Debug Peer",
        "Optimystic: Debug Interactive Peer (bootstraps to mesh)"
      ]
    }
  ]
}
